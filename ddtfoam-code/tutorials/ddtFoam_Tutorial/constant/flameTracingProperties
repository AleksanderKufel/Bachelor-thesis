FoamFile
{
version             1.0;
format              ascii;
root                "";
case                "";
local               "constant";
class               dictionary;
form                dictionary;
object              flameTracingProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Directory

flameTracing		on;
stdDirectory		on;
subDirectory		"flameTracing";
fileName		"flameTrace";
tracingDebug		off;

// Tracing conditions

field			c;
value			0.5;
tracingInterval		10;

