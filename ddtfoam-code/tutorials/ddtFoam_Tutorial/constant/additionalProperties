FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "constant";
    object      additionalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

inviscid        off;

acousticCFL	on;

ScT		1.0;	// turbulent Schmidt number

temperatureFix  on; // increase rho, T, Tu artificially if it becomes unrealistically low


